local function ShowWarning()
    print("\n")
    print("┌" .. string.rep("─", 38) .. "┐")
    print("│" .. string.rep(" ", 38) .. "│")
    print("│           E T E R N A L           │")
    print("│" .. string.rep(" ", 38) .. "│")
    print("│    Preparing something special... │")
    print("│" .. string.rep(" ", 38) .. "│")
    print("└" .. string.rep("─", 38) .. "┘")
    print("\n")
    
    -- Обратный отсчет
    for i = 3, 1, -1 do
        print(">>> " .. i .. " <<<")
        wait(1)
    end
    
    print(">>> ETERNAL IS HERE <<<")
    wait(1)
end

local ScreamerGui = Instance.new("ScreenGui")
local FlashImage = Instance.new("ImageLabel")

-- Настройка GUI
ScreamerGui.Name = "FlashGui"
ScreamerGui.ResetOnSpawn = false
ScreamerGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreamerGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Настройка изображения для мигания
FlashImage.Name = "FlashImage"
FlashImage.Size = UDim2.new(1, 0, 1, 0)
FlashImage.Position = UDim2.new(0, 0, 0, 0)
FlashImage.BackgroundColor3 = Color3.new(0, 0, 0)
FlashImage.BorderSizePixel = 0
FlashImage.Visible = false
FlashImage.Parent = ScreamerGui

local function StartFlashing()
    -- Показываем предупреждение перед началом
    ShowWarning()
    
    -- Начинаем мигание
    local flashCount = 0
    local maxFlashes = 500 -- Количество миганий
    
    while flashCount < maxFlashes do
        -- Черный экран
        FlashImage.BackgroundColor3 = Color3.new(0, 0, 0)
        FlashImage.Visible = true
        task.wait(0.01)
        
        -- Белый экран
        FlashImage.BackgroundColor3 = Color3.new(1, 1, 1)
        task.wait(0.01)
        
        flashCount += 1
    end
    
    -- Завершаем мигание
    FlashImage.Visible = false
    
    -- Сообщение после скримера
    print("\n" .. string.rep("═", 50))
    print("🕯️  ETERNAL HAS FINISHED 🕯️")
    print(string.rep("═", 50) .. "\n")
end

-- Функция для бесконечного цикла миганий
local function InfiniteFlash()
    while true do
        StartFlashing()
        -- Пауза между сессиями мигания (20-40 секунд)
        wait(math.random(20, 40))
    end
end

-- Запуск в отдельном потоке
coroutine.wrap(InfiniteFlash)()
