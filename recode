local function ShowWarning()
    print("\n")
    print("â”Œ" .. string.rep("â”€", 38) .. "â”")
    print("â”‚" .. string.rep(" ", 38) .. "â”‚")
    print("â”‚           E T E R N A L           â”‚")
    print("â”‚" .. string.rep(" ", 38) .. "â”‚")
    print("â”‚    Preparing something special... â”‚")
    print("â”‚" .. string.rep(" ", 38) .. "â”‚")
    print("â””" .. string.rep("â”€", 38) .. "â”˜")
    print("\n")
    
    -- ÐžÐ±Ñ€Ð°Ñ‚Ð½Ñ‹Ð¹ Ð¾Ñ‚ÑÑ‡ÐµÑ‚
    for i = 3, 1, -1 do
        print(">>> " .. i .. " <<<")
        wait(1)
    end
    
    print(">>> ETERNAL IS HERE <<<")
    wait(1)
end

local ScreamerGui = Instance.new("ScreenGui")
local FlashImage = Instance.new("ImageLabel")

-- ÐÐ°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ° GUI
ScreamerGui.Name = "FlashGui"
ScreamerGui.ResetOnSpawn = false
ScreamerGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreamerGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- ÐÐ°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ° Ð¸Ð·Ð¾Ð±Ñ€Ð°Ð¶ÐµÐ½Ð¸Ñ Ð´Ð»Ñ Ð¼Ð¸Ð³Ð°Ð½Ð¸Ñ
FlashImage.Name = "FlashImage"
FlashImage.Size = UDim2.new(1, 0, 1, 0)
FlashImage.Position = UDim2.new(0, 0, 0, 0)
FlashImage.BackgroundColor3 = Color3.new(0, 0, 0)
FlashImage.BorderSizePixel = 0
FlashImage.Visible = false
FlashImage.Parent = ScreamerGui

local function StartFlashing()
    -- ÐŸÐ¾ÐºÐ°Ð·Ñ‹Ð²Ð°ÐµÐ¼ Ð¿Ñ€ÐµÐ´ÑƒÐ¿Ñ€ÐµÐ¶Ð´ÐµÐ½Ð¸Ðµ Ð¿ÐµÑ€ÐµÐ´ Ð½Ð°Ñ‡Ð°Ð»Ð¾Ð¼
    ShowWarning()
    
    -- ÐÐ°Ñ‡Ð¸Ð½Ð°ÐµÐ¼ Ð¼Ð¸Ð³Ð°Ð½Ð¸Ðµ
    local flashCount = 0
    local maxFlashes = 500 -- ÐšÐ¾Ð»Ð¸Ñ‡ÐµÑÑ‚Ð²Ð¾ Ð¼Ð¸Ð³Ð°Ð½Ð¸Ð¹
    
    while flashCount < maxFlashes do
        -- Ð§ÐµÑ€Ð½Ñ‹Ð¹ ÑÐºÑ€Ð°Ð½
        FlashImage.BackgroundColor3 = Color3.new(0, 0, 0)
        FlashImage.Visible = true
        task.wait(0.01)
        
        -- Ð‘ÐµÐ»Ñ‹Ð¹ ÑÐºÑ€Ð°Ð½
        FlashImage.BackgroundColor3 = Color3.new(1, 1, 1)
        task.wait(0.01)
        
        flashCount += 1
    end
    
    -- Ð—Ð°Ð²ÐµÑ€ÑˆÐ°ÐµÐ¼ Ð¼Ð¸Ð³Ð°Ð½Ð¸Ðµ
    FlashImage.Visible = false
    
    -- Ð¡Ð¾Ð¾Ð±Ñ‰ÐµÐ½Ð¸Ðµ Ð¿Ð¾ÑÐ»Ðµ ÑÐºÑ€Ð¸Ð¼ÐµÑ€Ð°
    print("\n" .. string.rep("â•", 50))
    print("ðŸ•¯ï¸  ETERNAL HAS FINISHED ðŸ•¯ï¸")
    print(string.rep("â•", 50) .. "\n")
end

-- Ð¤ÑƒÐ½ÐºÑ†Ð¸Ñ Ð´Ð»Ñ Ð±ÐµÑÐºÐ¾Ð½ÐµÑ‡Ð½Ð¾Ð³Ð¾ Ñ†Ð¸ÐºÐ»Ð° Ð¼Ð¸Ð³Ð°Ð½Ð¸Ð¹
local function InfiniteFlash()
    while true do
        StartFlashing()
        -- ÐŸÐ°ÑƒÐ·Ð° Ð¼ÐµÐ¶Ð´Ñƒ ÑÐµÑÑÐ¸ÑÐ¼Ð¸ Ð¼Ð¸Ð³Ð°Ð½Ð¸Ñ (20-40 ÑÐµÐºÑƒÐ½Ð´)
        wait(math.random(20, 40))
    end
end

-- Ð—Ð°Ð¿ÑƒÑÐº Ð² Ð¾Ñ‚Ð´ÐµÐ»ÑŒÐ½Ð¾Ð¼ Ð¿Ð¾Ñ‚Ð¾ÐºÐµ
coroutine.wrap(InfiniteFlash)()
